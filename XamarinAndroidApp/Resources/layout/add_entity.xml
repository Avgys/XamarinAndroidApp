<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_margin="30dp">
                    <Button
                        android:id="@+id/btnAddImage"
                        android:text="Add Image"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="top"
                        android:layout_marginStart="40dp"
                        app:backgroundTint="#003157"/>
                    <Button
                        android:id="@+id/btnAddVideo"
                        android:text="Add Video"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="top"
                        android:layout_marginStart="40dp"
                        app:backgroundTint="#003157"/>
                    <EditText
                        android:id="@+id/entityName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Name"
                        android:inputType="textEmailAddress"/>
                    <EditText
                        android:id="@+id/entityDescription"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Description"
                        android:inputType="textEmailAddress"/>
                    <EditText
                        android:id="@+id/entitySocket"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Socket"
                        android:inputType="textEmailAddress"/>
                    <TextView
                        android:text="Is multithread"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <RadioButton
                            android:id="@+id/entityIsMultiThreadingYes"
                            android:autofillHints="Is multithread"
                            android:text="Yes"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:checked="false"/>
                        <RadioButton
                            android:id="@+id/entityIsMultiThreadingNo"
                            android:autofillHints="Is multithread"
                            android:text="No"
                            android:checked="true"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>

                    </LinearLayout>

                    <EditText
                        android:id="@+id/entityCores"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Cores"
                        android:inputType="textEmailAddress"/>
                    <EditText
                        android:id="@+id/entityFrequncy"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Frequncy"
                        android:inputType="textEmailAddress"/>
                    <EditText
                        android:id="@+id/entityCodeName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="CodeName"
                        android:inputType="textEmailAddress"/>
                    <EditText
                        android:id="@+id/entityTDP"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="TDP"
                        android:inputType="textEmailAddress"/>
                </LinearLayout>
            </FrameLayout>
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="87.0dp"
                android:layout_marginBottom="43.5dp">
                <Button
                    android:id="@+id/btnSaveAdd"
                    android:text="Add"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="top"
                    android:layout_marginStart="40dp"
                    app:backgroundTint="#003157"/>
            </FrameLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
